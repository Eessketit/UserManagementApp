@page
@model UserManagementApp.Pages.Admin.UsersModel
@using UserManagementApp.Models

@{
    ViewData["Title"] = "User Management";
}

<h3 class="mb-3">User Management</h3>

@if (TempData["StatusMessage"] is string statusMessage)
{
    var statusType = TempData["StatusType"] as string ?? "info";
    <div class="alert alert-@statusType" role="alert">
        @statusMessage
    </div>
}

<form method="post">

    <!-- TOOLBAR -->
    <div class="btn-toolbar mb-3 gap-2" role="toolbar" aria-label="User actions toolbar">
        <button asp-page-handler="Block" class="btn btn-danger" disabled id="btnBlock" data-bs-toggle="tooltip"
            data-bs-placement="top" title="Block selected users">
            Block
        </button>

        <button asp-page-handler="Unblock" class="btn btn-success" disabled id="btnUnblock" data-bs-toggle="tooltip"
            data-bs-placement="top" title="Unblock selected users" aria-label="Unblock selected users">
            <i class="bi bi-unlock"></i>
        </button>
        <button asp-page-handler="Delete" class="btn btn-outline-danger" disabled id="btnDelete"
            data-bs-toggle="tooltip" data-bs-placement="top" title="Delete selected users"
            aria-label="Delete selected users">
            <i class="bi bi-trash"></i>
        </button>

        <button asp-page-handler="DeleteUnverified" class="btn btn-outline-danger" disabled id="btnDeleteUnverified"
            data-bs-toggle="tooltip" data-bs-placement="top" title="Delete selected unverified users"
            aria-label="Delete selected unverified users">
            <i class="bi bi-person-x"></i>
        </button>
    </div>
    <!-- USERS TABLE -->
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:40px">
                    <input type="checkbox" id="selectAll" />
                </th>
                <th>Name</th>
                <th>Email</th>
                <th>Last login</th>
                <th>Status</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model.Users)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="SelectedIds" value="@u.Id" class="row-check" />
                    </td>

                    <td>
                        <strong>@u.Name</strong><br />
                        <small class="text-muted">@u.Address</small>
                    </td>

                    <td>@u.Email</td>
                    <td>
                        @(u.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")
                    </td>

                    <td>
                        @if (u.Status == UserStatus.Blocked)
                        {
                            <span class="badge bg-danger">Blocked</span>
                        }
                        else if (u.Status == UserStatus.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Unverified</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checks = document.querySelectorAll('.row-check');
        const buttons = document.querySelectorAll('#btnBlock,#btnUnblock,#btnDelete,#btnDeleteUnverified');

        function updateButtons() {
            const anyChecked = [...checks].some(c => c.checked);
            buttons.forEach(b => b.disabled = !anyChecked);
        }

        selectAll.addEventListener('change', e => {
            checks.forEach(c => c.checked = e.target.checked);
            updateButtons();
        });

        checks.forEach(c => c.addEventListener('change', updateButtons));

        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(triggerEl => new bootstrap.Tooltip(triggerEl));
    </script>
}